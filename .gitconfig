[user]
	name = Ivan Zezyulya
	email = ivan@zezyulya.com
[alias]
	cam = commit -a -m
	com = commit -m
	st = status
	lol = log --graph --pretty=format:'%C(bold cyan) %h %Creset %C(green)%ad %C(bold red)%d%Creset %s  %C(blue)(%an, %cr)%Creset' --date-order --date=short
	ll = log --pretty=format:'%C(cyan)%h%C(bold red)%d %Creset%s%Cblue (%cn, %cr)' --decorate --numstat
	br = branch
	co = checkout
	aa = add -A
	la = "!git config -l | grep alias | cut -c 7-"
	diff = diff --word-diff
	rh = reset --hard
[apply]
	whitespace = nowarn
[color]
	ui = auto
	interactive = auto
#[diff] 
#	tool = gvimdiff
[core]
	quotepath = false
	excludesfile = ~/.gitignore_global
[push]
	default = matching
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
