[user]
	name = Ivan Zezyulya
	email = ivan@zoid.cc
[alias]
	cam = commit -a -m
	com = commit -m
	am = commit --amend
	st = status
	lol = log --graph --pretty=format:'%C(bold cyan) %h %Creset %C(green)%ad %C(bold red)%d%Creset %s  %C(blue)(%an, %cr)%Creset' --date-order --date=short
	br = branch
	co = checkout
	aa = add -A
	alias = "!git config -l | grep alias | cut -c 7-"
	diff = diff --word-diff
	branch-name = "!git rev-parse --abbrev-ref HEAD"
	pub = "!git push -u origin $(git branch-name)"
	unpub = "!git push origin :$(git branch-name)"
	poll = "!git pull origin $(git branch-name) && git branch --set-upstream-to=origin/$(git branch-name)"
	rh = reset --hard
	cdf = clean -d -f
[apply]
	whitespace = nowarn
[color]
	ui = auto
	interactive = auto
[core]
	quotepath = false
	excludesfile = /Users/ivan/.gitignore_global
[push]
	default = simple
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[credential]
	helper = osxkeychain
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[mergetool "mergepbx"]
    cmd = mergepbx "$BASE" "$LOCAL" "$REMOTE" -o "$MERGED"
